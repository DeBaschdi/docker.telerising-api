#!/bin/bash
set -e
set -f

UID="telerising"

if [[ -z "${TIMEZONE}" ]]; then
  TIMEZONE="Europe/Berlin"
fi

if [[ -z "${GROUP_ID}" ]]; then
  GROUP_ID="100"
fi

if [[ -z "${USER_ID}" ]]; then
  USER_ID="99"
fi

if [[ -z "${UPDATE}" ]]; then
  UPDATE="yes"
fi

if [[ ! -f /telerising/zattoo.pl ]] || [[ "${UPDATE}" = "yes" ]]; then
  /usr/local/bin/telerising.update
fi

ln -fs /usr/share/zoneinfo/${TIMEZONE} /etc/localtime
dpkg-reconfigure -f noninteractive tzdata

echo "${UID}:x:${USER_ID}:${GROUP_ID}:${UID}:/:/sbin/nologin" >> /etc/passwd
echo "${UID}:!::0:::::" >> /etc/shadow

if ! getent group ${GROUP_ID}; then
  echo "${UID}:x:${GROUP_ID}:" >> /etc/group
fi

chown -R ${USER_ID}:${GROUP_ID} /telerising
chown -R ${USER_ID}:${GROUP_ID} /tmp
chmod -R 775 /telerising
chmod -R 775 /tmp

su -s /bin/bash -c "TERM=xterm /usr/local/bin/telerising.process" ${UID}
